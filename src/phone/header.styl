header
  background: $brown
  padding: 10px 0
  border-bottom: solid 3px $green
  max-height: 87px
  overflow: none
  position: fixed
  z-index: 2
  top: 0
  width: 100%

.row
  clearfix()

.flex-container
  display: -webkit-flex
  display: flex
  width: 100%

.logo
  height: 38px
  width: 135px
  font-family: $Josefin
  color: $white
  text-align: center
  letter-spacing: 1.7px
  font-size: 17px
  line-height: 19px
  margin: 0 10px 0 10px

  b
    color: $pink

.location-input
  display: -webkit-flex
  display: flex
  width: 100%
  height: 20px
  padding: 5px
  border: solid $pink 2px
  border-radius: 15px
  margin: 0

  .search-icon
    width: 25px
    height: 20px
    margin-top: 2px
  input
    width: 100%
    background-color: $brown
    border: 0
    outline: 0
    color: $white
    font-family: $InputText
    font-size: 16px
    line-height: 20px
    padding: 0 0 2px 0
    height: 20px
    placeholder( $white )

.menu-icon
  width: 47px
  padding: 4px 10px
  cursor: pointer

  div
    width: 30px
    height: 3px
    background: $green
    margin-bottom: 7px
    border-radius: 5px
    &:last-child
      margin: 0

.tagline
  display: block
  color: $green
  padding-top: 2px
  padding-left: 10px
  height: 30px
  line-height: 30px
  font-size: 22px
  font-family: $GreatVibes
  letter-spacing: 2px
  width: 100%

  @media (max-width: 345px)
    .large-only
      display: none

.mobile-bar
  background: $brown
  color: $white
  font-size: 16px
  padding-right: 10px
  padding-top: 8px

.mobile-controls
  float: right
  margin: 0 auto
  width: 110px
  border: solid 2px $pink
  height: 30px
  position: relative
  font-family: $InputText
  cursor: pointer

  .map
    position: absolute
    width: 50%
    margin-top: -1px
    height: 31px
    line-height: 31px
    text-align: center
    padding-left: 1px
    margin-left: -1px
    left: 0
    top: 0

  .hr
    width: 2px
    height: 31px
    background: $pink
    margin: -1px auto 0 auto

  .list
    position: absolute
    width: 50%
    margin-top: -1px
    height: 31px
    line-height: 31px
    text-align: center
    padding-right: 1px
    margin-right: -1px
    right: 0
    top: 0

  .selected
    background: $pink
    color: $brown

.yelp-branding
  display: block
  width: 94px
  font-family: $Josefin
  height: 18px
  position: relative
  padding: 4px 0px 0px 3px
  margin: -10px 0 0 10px
  border-radius: 3px
  background: #d23930
  text-decoration: none

  span
    display: block
    margin-top: 3px
    color: white
    font-size: 12px

.yelp-logo
  position: absolute
  top: 1px
  right: 2px
  height: 20px
  display: block
