header
  background: $black
  padding:10px
  border-bottom: solid 3px $green
  max-height: 82px
  overflow: none
  position: fixed
  z-index: 2
  top: 0

.row
  clearfix()

.flex-container
  display: -webkit-flex
  display: flex
  width: 100%

.logo
  height: 48px
  width: 80px
  font-family: $Josefin
  color: $white
  text-align: center
  letter-spacing: 1.7px
  font-size: 17px
  line-height: 19px

  b
    color: $pink

.location-input
  display: -webkit-flex
  display: flex
  width: 100%
  height: 20px
  padding: 5px
  border: solid $pink 2px
  border-radius: 15px
  margin: 0 10px

  .search-icon
    width: 25px
    height: 25px
  input
    width: 100%
    background-color: $black
    border: 0
    outline: 0
    color: $white
    font-family: $InputText
    font-size: 16px
    line-height: 20px
    placeholder( $white )

.menu
  width: 47px
  padding: 4px
  cursor: pointer

  div
    width: 30px
    height: 3px
    background: $green
    margin-bottom: 7px
    border-radius: 5px

.tagline
  color: $green
  padding-top: 2px
  height: 30px
  line-height: 30px
  font-size: 22px
  font-family: $GreatVibes
  letter-spacing: 2px
  width: 100%

.mobile-bar
  background: $black
  color: $white
  font-size: 16px

.mobile-controls
  margin: 0 auto
  width: 110px
  border: solid 2px $pink
  height: 30px
  position: relative
  font-family: $InputText
  cursor: pointer

  .map
    position: absolute
    width: 50%
    margin-top: -1px
    height: 31px
    line-height: 31px
    text-align: center
    padding-left: 1px
    margin-left: -1px
    left: 0
    top: 0

  .hr
    width: 2px
    height: 31px
    background: $pink
    margin: -1px auto 0 auto

  .list
    position: absolute
    width: 50%
    margin-top: -1px
    height: 31px
    line-height: 31px
    text-align: center
    padding-right: 1px
    margin-right: -1px
    right: 0
    top: 0

  .selected
    background: $pink
    color: $black
