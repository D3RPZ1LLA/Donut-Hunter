.menu
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 3
  &.closed
    display: none

  .exit
    position: fixed
    top: 8px
    right: 8px
    z-index: 3
    height: 45px
    width: auto
    cursor: pointer
    path
      fill: $white
      &:last-child
        fill: $green

  .background
    background: $green
    position: fixed
    top: 0
    left: 0
    height: 100%
    width: 100%
    z-index: 1
    opacity: 1

  header
    position: fixed
    z-index: 2
    background: $brown
    height: 57px
    width: 100%

    .logo
      font-size: 24px
      line-height: 24px
      margin: 0 auto
      height: auto
      padding: 7px 0 2px 0

  .content
    position: relative
    z-index: 2
    max-width: 600px
    padding: 0 40px
    margin: 67px auto 0 auto

    p
      font-family: $Josefin
      color: $white
      font-size: 20px
      line-height: 20px
      letter-spacing: 1.5px

    .credit
      clearfix()
      padding: 6px 0
      color: $brown
    .role
      float: left
    .name
      float: right

    .concept-art
      display: block
      height: 300px
      width: auto
      margin: 10px auto 0 auto
  .more-projects
    text-align: center
    margin: 30px 0
    a
      display: inline-block
      border: solid 3px $brown
      color: $brown
      text-decoration: none
      border-radius: 7px
      padding: 10px
