global-reset()

body
  background: #87af7d
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif

header
  background: black
  padding:10px

.row
  clearfix()

  img
    display: block
    height: 48px
    width: auto
    float: left

.location-input
  margin: 0
  // -webkit-flex: 1 1 auto
  // flex: 1 1 auto
  // width: 40%
  // -webkit-transition: width 0.7s ease-out
  // transition: width 0.7s ease-out

  input
    // width: 100%

.tagline
  color: #87af7d
  padding-top: 2px
  height: 30px
  line-height: 30px
  font-size: 20px
  font-family: 'Dancing Script', cursive
  float: left

.mobile-bar
  background: black
  color: white
  font-size: 16px
  float: right

.mobile-controls
  margin: 0 auto
  width: 110px
  border: solid 2px #f992c5
  height: 30px
  position: relative

  .map
    position: absolute
    width: 50%
    margin-top: -1px
    height: 31px
    line-height: 31px
    text-align: center
    padding-left: 1px
    margin-left: -1px
    left: 0
    top: 0

  .hr
    width: 2px
    height: 31px
    background: #f992c5
    margin: -1px auto 0 auto

  .list
    position: absolute
    width: 50%
    margin-top: -1px
    height: 31px
    line-height: 31px
    text-align: center
    padding-right: 1px
    margin-right: -1px
    right: 0
    top: 0

  .selected
    background: #f992c5
    color: black

#map-canvas
  width: 100%
  height: 400px
  margin: 0 auto
.location-list
  img
    max-width: 100%
