global-reset()

body
  background: #87af7d

header
  background: black
  padding: 20px 0
  @media screen and (orientation:landscape)
    padding: 0

  img
    display: block
    height: 80px
    width: auto
    margin: 0 auto
    @media screen and (orientation:landscape)
      padding: 2% 0

.load-screen
  position: absolute
  top: 152px
  height: 70%
  width: 100%
  padding: 15% 0
  @media screen and (orientation:landscape)
    padding: 0
    height: 75%

  .avatar
    height: 90%
    width: auto
    display: block
    margin: 0 auto

#map-canvas
  height: 400px
  width: 400px
  margin: 0 auto
