$pink = #ea7da2
$green = #71a87b

$Rosario = 'Josefin Sans', sans-serif

global-reset()

body
  background: $green
  font-family: $Rosario

header
  background: black
  padding:10px
  border-bottom: solid 5px $green

.row
  clearfix()

.logo
  height: 48px
  width: auto
  float: left
  font-family: $Rosario
  color: white
  text-align: center
  letter-spacing: 1.7px
  font-size: 17px
  line-height: 19px

  b
    color: $pink

.location-input-containter
  width: 200px
  float: left

.location-input
  margin: 0 0 0 12px
  border-radius: 15px
  border: solid 2px $pink
  padding-right: 15px
  width: 165px
  position: relative

  .search-icon
    position: absolute
    top: 4px
    left: 5px
    width: 26px
    height: auto

  input
    display: block
    background: black
    color: white
    border: 0
    outline: 0
    padding: 5px 0px 5px 30px
    border-radius: 15px
    width: 145px
    font-family: $Rosario
    font-size: 16px

.menu
  float: right
  padding: 4px
  div
    width: 33px
    height: 3px
    background: $green
    margin-bottom: 7px
    border-radius: 5px

.tagline
  color: $green
  padding-top: 2px
  height: 30px
  line-height: 30px
  font-size: 20px
  font-family: 'Great Vibes', cursive
  letter-spacing: 2px
  float: left

.mobile-bar
  background: black
  color: white
  font-size: 16px
  float: right

.mobile-controls
  margin: 0 auto
  width: 110px
  border: solid 2px $pink
  height: 30px
  position: relative
  font-family: $Rosario

  .map
    position: absolute
    width: 50%
    margin-top: -1px
    height: 31px
    line-height: 31px
    text-align: center
    padding-left: 1px
    margin-left: -1px
    left: 0
    top: 0

  .hr
    width: 2px
    height: 31px
    background: $pink
    margin: -1px auto 0 auto

  .list
    position: absolute
    width: 50%
    margin-top: -1px
    height: 31px
    line-height: 31px
    text-align: center
    padding-right: 1px
    margin-right: -1px
    right: 0
    top: 0

  .selected
    background: $pink
    color: black

#map-canvas
  width: 100%
  height: 400px
  margin: 0 auto
.location-list
  img
    max-width: 100%
