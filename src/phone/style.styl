$pink = #ea7da2
$green = #71a87b
$white = #ffffff

$Josefin = 'Josefin Sans', sans-serif
$GreatVibes = 'Great Vibes', cursive
$InputText = 'Lato', sans-serif

global-reset()

placeholder(n)
  &::-webkit-input-placeholder  /* WebKit, Blink, Edge */
    color: n
    opacity: 1
  &:-moz-placeholder  /* Mozilla Firefox 4 to 18 */
    color: n
  &::-moz-placeholder  /* Mozilla Firefox 19+ */
    color: n
    opacity: 1
  &:-ms-input-placeholder /* Internet Explorer 10-11 */
    color: n

body
  background: $green
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-seriff

@import "header"

#map-canvas
  display: none
  width: 100%
  height: 400px
  margin: 0 auto

  &.active
    display: block

.location-list
  display: none
  &.active
    display: block

  .donut-location
    padding: 11px 0
    border-bottom: solid 2px $green
    display: -webkit-flex
    display: flex
    width: 100%
    background: black
    color: white

    .preview
      width: 65px
      min-width: 65px
      height: 65px
      border-radius: 8px
      margin: 0 11px

    .text-information
      width: 100%
      .title
        font-weight: bold
      .reviews
        .stars
          margin: 0
      .address
        color: $green
        font-size: 16px

      .distance-and-price
        width: 35px
        .distance
          margin: 0
        .price
          margin: 0
